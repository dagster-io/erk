{
  "permissions": {
    "allow": [
      "Bash(erk:*)",
      "Read(/tmp/*)",
      "Write(/tmp/*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run scripts/per-prompt-context-injection.py",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "ERK_HOOK_ID=session-id-injector-hook erk exec session-id-injector-hook",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "ERK_HOOK_ID=tripwires-reminder-hook erk exec tripwires-reminder-hook",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "ERK_HOOK_ID=exit-plan-mode-hook erk exec exit-plan-mode-hook",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
