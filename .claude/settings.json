{
  "permissions": {
    "allow": [
      "Bash(erk:*)",
      "Read(/tmp/*)",
      "Write(/tmp/*)"
    ],
    "deny": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "command -v erk >/dev/null 2>&1 || exit 0; ERK_HOOK_ID=user-prompt-hook erk exec user-prompt-hook"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "ERK_HOOK_ID=pre-tool-use-hook erk exec pre-tool-use-hook",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "command -v erk >/dev/null 2>&1 || exit 0; ERK_HOOK_ID=exit-plan-mode-hook erk exec exit-plan-mode-hook"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "[[ \"${file_path}\" == *.py ]] && uv run ruff format \"${file_path}\" || true"
          }
        ]
      }
    ]
  }
}